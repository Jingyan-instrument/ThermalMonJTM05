<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="600px"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:layout_margin="20px"
        android:id="@+id/mode_selector_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示界面设置"
        android:textSize="@dimen/title_size"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/show_mode_title"
        android:layout_margin="20px"
        android:textSize="@dimen/title_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作模式"/>
    <RadioGroup
        android:id="@+id/show_mode_group"
        android:layout_margin="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/show_mode_normal"
            android:checked="true"
            android:text="快速筛选模式"
            android:textSize="@dimen/show_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/show_mode_did"
            android:text="精确检测模式"
            android:textSize="@dimen/show_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/face_show_title"
        android:layout_margin="20px"
        android:textSize="@dimen/title_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人脸表情"/>
    <RadioGroup
        android:id="@+id/face_show_group"
        android:layout_margin="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/face_show_close"
            android:checked="true"
            android:text="关闭"
            android:textSize="@dimen/show_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/face_show_open"
            android:text="开启"
            android:textSize="@dimen/show_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150px">
        <Button
            android:id="@+id/mode_save"
            android:background="@drawable/radiobutton"
            android:textColor="#000000"
            android:text="确定"
            android:textSize="@dimen/button_size"
            android:layout_margin="20px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/mode_out"
            android:background="@drawable/cancel"
            android:textColor="#000000"
            android:text="取消"
            android:textSize="@dimen/button_size"
            android:layout_margin="20px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>



</LinearLayout>